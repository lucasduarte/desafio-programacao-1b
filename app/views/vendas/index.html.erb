<section class="section main-section">
  <div class="container">
    <div class="heading main-heading">
      <h1 class="title">Selecione o arquivo para importação</h1>
      <h2 class="subtitle">
        O arquivo deve estar no formato .txt e a primeira linha deve conter a identificação das colunas.
      </h2>
      <%= form_tag 'vendas/upload', method: 'post', :multipart => true do %>
      	<p class="control">
  				<%= file_field_tag "data", accept: '.txt' %>
  			</p>
  			<%= submit_tag 'Fazer Upload', class: 'button form-btn' %>
      <% end %>   	
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="heading">
      <h1 class="title">Registros Importados</h1>
    </div>
    <% if @vendas.empty?  %>
      <span>Nenhum dado a ser exibido.</span>
    <% else %>
      <table class="table">
        <thead>
          <tr>
            <th>Comprador</th>
            <th>Descrição</th>
            <th>Endereço</th>
            <th>Fornecedor</th>
            <th>Preço Unitário</th>
            <th>Quantidade</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th>Total Bruto</th>
            <th><%= converte_reais(@valor_total) %></th>
          </tr>
        </tfoot>
        <tbody>
          <% @vendas.each do |venda| %>
            <tr>
              <td><%= venda.comprador %></td>
              <td><%= venda.descricao %></td>
              <td><%= venda.endereco %></td>
              <td><%= venda.fornecedor %></td>
              <td><%= converte_reais(venda.preco_unitario) %></td>
              <td><%= venda.quantidade %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>

</section>
